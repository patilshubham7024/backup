import java.util.Scanner;
class Pattern{
	
    public static void main(String[] args){
	Scanner s=new Scanner(System.in);
	int n=s.nextInt();
	for(int i=1;i<=n;i++) {
		for(int j=1;j<=n;j++) {
			if(i==1||i==n||j==1||j==n||j==(n)/2||i==(n)/2)
				System.out.print(" * ");
			else System.out.print("   ");
			}
		System.out.println("\n");
		}
	}
    }
